<Window x:Class="movieapplication.ChangeGenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:movieapplication"
        mc:Ignorable="d"
        Title="Изменить жанр" Height="130" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,0" TextWrapping="Wrap" Text="Введите название" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="24" Margin="10,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="272"/>
        <Button x:Name="buttonAdd" Content="Изменить" HorizontalAlignment="Right" Margin="10,0" Grid.Row="2" VerticalAlignment="Center" Width="75" Click="buttonAdd_Click"/>

    </Grid>
</Window>
